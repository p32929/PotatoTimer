{
  "name": "PotatoTimer",
  "version": "1.0.0",
  "description": "A minimal Electron Pomodoro application",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "Electron",
    "Pomodoro"
  ],
  "build": {
    "appId": "Pomodoro",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "publisherName": "Fayaz Bin Salam"
    }
  },
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^22.7.0"
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "electron-reload": "^1.5.0",
    "electron-store": "^5.2.0",
    "jquery": "^3.5.1",
    "v8-compile-cache": "^2.1.1"
  }
}
